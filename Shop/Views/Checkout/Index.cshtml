                                        <option value='84'>Tỉnh Trà Vinh</option>
                                        <option value='86'>Tỉnh Vĩnh Long</option>
                                        <option value='87'>Tỉnh Đồng Tháp</option>
                                        <option value='89'>Tỉnh An Giang</option>
                                        <option value='91'>Tỉnh Kiên Giang</option>
                                        <option value='93'>Tỉnh Hậu Giang</option>
                                        <option value='94'>Tỉnh Sóc Trăng</option>
                                        <option value='95'>Tỉnh Bạc Liêu</option>
                                        <option value='96'>Tỉnh Cà Mau</option>
                                    </select>
                                </div><!-- End .col-sm-6 -->

                                <div >
                                    <label>District/Town *</label>
                                    <select id="district-town" type="text" class="form-control" required>
                                    </select>
                                </div>

                                <div >
                                    <label>Ward/Commune *</label>
                                    <select id="ward-commune" type="text" class="form-control" required>
                                    </select>
                                </div>
                                <input hidden name="cityprovince" type="text" id="cityprovince" />
                                <input hidden name="districttown" type="text" id="districttown" />
                                <input hidden name="wardcommune" type="text" id="wardcommune" />
                                <div>
                                    <label for="ExactAddress">Exact Address *</label>
                                    <input id="ExactAddress" name="ExactAddress" type="text" class="form-control" required>
                                </div><!-- End .col-sm-6 -->

                                <div class="custom-control custom-checkbox col-md-9">
                                    <input name="terms" type="checkbox" class="custom-control-input" id="terms">
                                    <label class="custom-control-label" for="terms">I agree to the <a href="/pages/faq">terms and conditions</a> *</label>
                                </div><!-- End .custom-checkbox -->

                                <label>Order notes (optional)</label>
                                <textarea name="Note" class="form-control" cols="30" rows="4"></textarea>
                         
                            </div>
                            <aside style="{.btn-outline-primary-2.disabled,.btn-outline-primary-2:disabled {color: #686868;background-color: transparent}" class="col-lg-3 mt-5">
                                <div class="summary">
                                    <h3 class="summary-title">Your Order</h3><!-- End .summary-title -->

                                    <table class="table table-summary">
                                        <thead>
                                            <tr>
                                                <th>Product</th>
                                                <th>Total</th>
                                            </tr>
                                        </thead>

                                        <tbody>
                                            @foreach (var item in Model.Items)
                                            {
                                                <tr>
                                                    <td>@item.Quantity x<a href="/product/detail?id=@item.ProductId"> @item.ProductName</a></td>
                                                    <td>$@item.Price</td>
                                                </tr>
                                            }
                                            <tr class="summary-subtotal">
                                                <td>Subtotal:</td>
                                                <td>$@Model.Items.Sum(s => s.Quantity * s.Price)</td>
                                            </tr><!-- End .summary-subtotal -->
                                            @*  <tr>
                                        <td>Shipping:</td>
                                        <td>Free shipping</td>
                                        </tr> *@
                                            <tr class="summary-total">
                                                <td>Total:</td>
                                                <td>$@Model.Items.Sum(s => s.Quantity * s.Price)</td>
                                            </tr><!-- End .summary-total -->
                                        </tbody>
                                    </table><!-- End .table table-summary -->

                                    <div class="d-flex justify-content-between">
                                        <label for="PaymentMethod">Payment Method *</label>
                                        <select name="PaymentMethod" class="form-select">
                                            @foreach (var item in Model.ShippingMethod)
                                            {
                                                <option value="@item.Key">@item.Value</option>
                                            }
                                        </select><!-- End .accordion -->
                                    </div>

                                    <button disabled id="btn-place-order" type="submit" class="mt-2 btn btn-outline-primary-2 btn-order btn-block">
                                        <span class="btn-text">Place Order</span>
                                        <span class="btn-hover-text">Place Order</span>
                                    </button>
                                </div><!-- End .summary -->
                            </aside><!-- End .col-lg-3 -->
                        </div><!-- End .row -->
                    </form>
                </div><!-- End .container -->
            </div><!-- End .checkout -->
        </div>

        <!-- End .page-content -->
    }
    else
    {
        <div class="ml-5 mr-5" style="background-color: white; text-align:center; align-content: center; height: 500px; border-radius: 8px">
            <div>
                <div>
                    <h1>You haven't added any items to your cart yet.</h1>
                </div>
                @Html.ActionLink("Go buy more!", "Index", "Product", new { area = "" }, new { @class = "btn btn-primary mt-3 rounded" })
            </div>
        </div>
    }
</main><!-- End .main -->
@section Scripts {
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script src="~/js/checkout.js"></script>
}