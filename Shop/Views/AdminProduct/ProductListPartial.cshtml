﻿@using Application.Products;
@using Application;
@model GenericData<ProductViewModel>

@foreach (var item in Model.Data)
{
    <tr data-count="@Model.Count" class="total-count">
        <td style="max-width: 300px"><a href="/product/detail?id=@item.ProductId">@item.ProductName</a></td>
        <td style="max-width: 150px"><img style="max-width: 100%" src="@item.ImageUrl" alt="@item.ImageAlt" /></td>
        <td>@item.Stock</td>
        <td>@item.Price</td>
        <td>@item.DiscountPrice</td>
        <td>
            <span class="badge @((item.IsFeatured) ? "bg-success" : "bg-danger")">
                <i class="bi @((item.IsFeatured) ? "bi-check-lg" : "bi-x-lg")"></i>
            </span>
        </td>
        <td>
            @item.Rating.ToString("F2") <i class="bi bi-star-fill"></i>
        </td>
        <td>
            <a href="@Url.Action("Update", "AdminProduct", new {id = item.ProductId})" class="btn btn-sm btn-primary">Edit</a>
            <a onclick="return confirm('Are you sure you want to delete this product?')" href="@Url.Action("Delete", "AdminProduct", new {id = item.ProductId})" class="btn btn-sm btn-danger">Delete</a>
        </td>
    </tr>
}