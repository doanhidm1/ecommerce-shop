                                    <option value='75'>Tỉnh Đồng Nai</option>
                                    <option value='77'>Tỉnh Bà Rịa - Vũng Tàu</option>
                                    <option value='80'>Tỉnh Long An</option>
                                    <option value='82'>Tỉnh Tiền Giang</option>
