                                    <option value='95'>Tỉnh Bạc Liêu</option>
                                    <option value='96'>Tỉnh Cà Mau</option>
                                </select>
                            </div>
                        </div>

                        <div class="row mb-4" style="justify-content: space-between">
                            <label for="inputText" class="col-sm-1 col-form-label">Phone</label>
                            <div class="col-sm-4">
                                <input id="Phone" type="text" class="form-control" placeholder="Enter customer phone...">
                            </div>

                            <label class="col-sm-2 col-form-label">District/Town</label>
                            <div class="col-sm-4">
                                <select id="district-town" type="text" class="form-select" aria-label="Default select example">
                                </select>
                            </div>
                        </div>

                        <div class="row mb-4" style="justify-content: space-between">
                            <label for="inputText" class="col-sm-1 col-form-label">Email</label>
                            <div class="col-sm-4">
                                <input id="Email" type="text" class="form-control" placeholder="Enter customer email...">
                            </div>

                            <label class="col-sm-2 col-form-label">Ward/Commune</label>
                            <div class="col-sm-4">
                                <select id="ward-commune" type="text" class="form-select" aria-label="Default select example">
                                </select>
                            </div>
                        </div>

                        <input hidden name="cityprovince" type="text" id="cityprovince" />
                        <input hidden name="districttown" type="text" id="districttown" />
                        <input hidden name="wardcommune" type="text" id="wardcommune" />

                        <div class="row mb-4" style="justify-content: space-between">
                            <label for="inputText" class="col-sm-1 col-form-label">Status</label>
                            <div class="col-sm-4">
                                <select id="order-status" class="form-select" aria-label="Default select example">
                                    <option value=@null></option>
                                    @foreach (var item in Model.Status)
                                    {
                                        if (item.Key == 1) continue;
                                        <option value="@item.Key">@item.Value</option>
                                    }

                                </select>
                            </div>

                            <label class="col-sm-2 col-form-label">Order by</label>
                            <div class="col-sm-4">
                                <select id="order-by" class="form-select" aria-label="Default select example">
                                    @foreach (var item in Model.OrderBy)
                                    {
                                        if (item.Key == 4) continue;
                                        <option value="@item.Key">@item.Value</option>
                                    }

                                </select>
                            </div>
                        </div>

                        <!-- Table with stripped rows -->
                        <table style="text-align: center" class="table datatable table-hover table-bordered">
                            <thead>
                                <tr style="vertical-align: middle">
                                    <th>Customer Name</th>
                                    <th>Contact</th>
                                    <th>Address</th>
                                    <th>Order date</th>
                                    <th>Total amount</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody id="table-content" style="vertical-align: middle">
                                @*partial view*@
                            </tbody>
                        </table>
                        <!-- End Table with stripped rows -->
                        <div class="d-flex justify-content-center" id="pagination"></div>
                    </div>
                </div>

            </div>
        </div>
    </section>

</main><!-- End #main -->
@section Scripts {
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script src="~/NiceAdmin/js/order-list.js"></script>
    <script src="~/NiceAdmin/js/result.js"></script>
}
