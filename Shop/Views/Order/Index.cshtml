                                    <option value='10'>Tỉnh Lào Cai</option>
                                    <option value='11'>Tỉnh Điện Biên</option>
                                    <option value='12'>Tỉnh Lai Châu</option>
                                    <option value='14'>Tỉnh Sơn La</option>
                                    <option value='15'>Tỉnh Yên Bái</option>
