                                    <option value='48'>Thành phố Đà Nẵng</option>
                                    <option value='92'>Thành phố Cần Thơ</option>
                                    <option value='02'>Tỉnh Hà Giang</option>
                                    <option value='04'>Tỉnh Cao Bằng</option>
