﻿@using Application;
@using Application.Orders
@using Newtonsoft.Json;
@model OrderDetailViewModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<title>Order Detail</title>

<main id="main" class="main">
    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 style="display: inline-block" class="card-title col-sm-2">Order detail</h5>
                        <div class="row mb-4" style="">
                            <strong class="col-sm-2">Customer name</strong>
                            <div class="col-sm-4">
                                <div>@Model.CustomerName</div>
                            </div>

                            <strong class="col-sm-2">Order date</strong>
                            <div class="col-sm-4">
                                <div>@Model.OrderDate</div>
                            </div>
                        </div>
                        <div class="row mb-4" style="">
                            <strong class="col-sm-2">Payment method</strong>
                            <div class="col-sm-4">
                                <div>@Model.PaymentMethod</div>
                            </div>

                            <strong class="col-sm-2">Status</strong>
                            <div class="col-sm-3">
                                @switch(Model.Status)
                                {
                                    case Domain.Enums.EntityStatus.Pending:
                                        <div class="text-primary">Pending</div>
                                        break;
                                    case Domain.Enums.EntityStatus.Completed:
                                        <div class="text-success">Completed</div>
                                        break;
                                    case Domain.Enums.EntityStatus.Cancelled:
                                        <div class="text-danger">Cancelled</div>
                                        break;
                                    case Domain.Enums.EntityStatus.Denied:
                                        <div class="text-danger">Denied</div>
                                        break;
                                    default:
                                        <div>Unknow ?</div>
                                        break;
                                }
                            </div>
                        </div>

                        <table style="text-align: center" class="table datatable table-hover table-bordered">
                            <thead>
                                <tr style="vertical-align: middle">
                                    <th>Product name</th>
                                    <th>Unit price</th>
                                    <th>Quantity</th>
                                </tr>
                            </thead>
                            <tbody id="table-content" style="vertical-align: middle">
                                @foreach(var item in Model.OrderDetailItems)
                                {
                                    <tr>
                                        <td>@item.ProductName</td>
                                        <td>@item.UnitPrice $</td>
                                        <td>x @item.Quantity</td>
                                    </tr>
                                }
                                <tr>
                                    <td></td>
                                    <td><h5 class="text-primary"><strong>Total:</strong></h5></td>
                                    <td><h5 class="text-danger"><strong>@Model.TotalPrice $</strong></h5></td>
                                </tr>
                            </tbody>
                        </table>

                        <a style="float: inline-end" href="@Url.Action("Update", "Order", new {id = Model.OrderId})" class="btn btn-sm btn-danger">Update status</a>

                    </div>
                </div>
            </div>
        </div>
    </section>

</main><!-- End #main -->